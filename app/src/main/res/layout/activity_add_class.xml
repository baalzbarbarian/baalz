<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3399FF"
    tools:context=".StudentsManagerActivity.AddClassActivity">

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/background_add"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="440dp">

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/background_add_title"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#FFF"
                android:paddingLeft="30dp"
                android:gravity="left"
                android:textSize="24sp"
                android:fontFamily="@font/windsorb"
                android:text="Thêm Lớp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:fontFamily="@font/windsorb"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/text_add_class"
                android:textSize="14sp"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <EditText
                android:id="@+id/addClass_edt1"
                android:textColor="#FFF"
                android:fontFamily="@font/windsorb"
                android:textColorHint="#FFF"
                android:paddingLeft="10dp"
                android:hint="Mã lớp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/round_edt"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <EditText
                android:id="@+id/addClass_edt2"
                android:textColor="#FFF"
                android:fontFamily="@font/windsorb"
                android:textColorHint="#FFF"
                android:paddingLeft="10dp"
                android:hint="Chuyên ngành"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/round_edt"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:background="#0033cc"
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/addClass_btn1"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:text="Bỏ qua"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_add_class"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

                <Button
                    android:id="@+id/addClass_btn2"
                    android:textStyle="bold"
                    android:text="Thêm"
                    android:textColor="#FFF"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_add_class"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

            </LinearLayout>



        </LinearLayout>

        <TextView
            android:fontFamily="@font/windsorb"
            android:padding="5dp"
            android:gravity="bottom|right"
            android:textSize="12sp"
            android:textColor="#FFF"
            android:text="ASSIGNMENT\nCopyright by PD03241"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

<!--        <LinearLayout-->
<!--            android:background="#3399FF"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent">-->



<!--        </LinearLayout>-->

    </LinearLayout>

</LinearLayout>