<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/background_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/background_add_title"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#FFF"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:gravity="left"
                android:textSize="18sp"
                android:fontFamily="@font/windsorb"
                android:text="Sửa Thông Tin Sinh Viên"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:fontFamily="@font/windsorb"
                android:paddingLeft="30dp"
                android:text="@string/text_add_student"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <EditText
                android:enabled="false"
                android:id="@+id/updateStudents_classCode"
                android:textColor="#FFF"
                android:fontFamily="@font/windsorb"
                android:textColorHint="#FFF"
                android:paddingLeft="10dp"
                android:hint="Mã lớp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/round_edt"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <EditText
                android:id="@+id/updateStudents_studentCode"
                android:textColor="#FFF"
                android:fontFamily="@font/windsorb"
                android:textColorHint="#FFF"
                android:paddingLeft="10dp"
                android:hint="Mã sinh vien"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/round_edt"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <EditText
                android:id="@+id/updateStudents_studenName"
                android:textColor="#FFF"
                android:fontFamily="@font/windsorb"
                android:textColorHint="#FFF"
                android:paddingLeft="10dp"
                android:hint="Họ tên"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/round_edt"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <EditText
                android:id="@+id/updateStudents_born"
                android:textColor="#FFF"
                android:fontFamily="@font/windsorb"
                android:textColorHint="#FFF"
                android:paddingLeft="10dp"
                android:hint="Ngày sinh"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/round_edt"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:background="#0033cc"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/updateStudents_btn1"
                        android:textStyle="bold"
                        android:textColor="#FFF"
                        android:text="Xoá Sinh Viên"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/btn_add_class"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <Button
                        android:layout_gravity="center"
                        android:id="@+id/updateStudents_btn2"
                        android:textStyle="bold"
                        android:text="Sửa Thông Tin"
                        android:textColor="#FFF"
                        android:layout_weight="1"
                        android:background="@drawable/btn_add_class"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_gravity="center"
                        android:id="@+id/updateStudents_btn3"
                        android:textStyle="bold"
                        android:text="Trở lại"
                        android:textColor="#FFF"
                        android:layout_weight="1"
                        android:background="@drawable/btn_add_class"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>
                </LinearLayout>

            </LinearLayout>





        </LinearLayout>

        <TextView
            android:fontFamily="@font/windsorb"
            android:padding="5dp"
            android:gravity="bottom|right"
            android:textSize="12sp"
            android:textColor="#FFF"
            android:text="ASSIGNMENT\nCopyright by PD03241"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--        <LinearLayout-->
        <!--            android:background="#3399FF"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent">-->



        <!--        </LinearLayout>-->

    </LinearLayout>

</LinearLayout>