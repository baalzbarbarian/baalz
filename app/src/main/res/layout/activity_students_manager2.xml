<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentsManagerActivity.StudentsManager">

    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text="Lớp:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_weight="1"
                        android:textColor="#FF9900"
                        android:id="@+id/txtNganh"
                        android:paddingLeft="15dp"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text="Mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text="Mã:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_weight="1"
                        android:textColor="#0033cc"
                        android:id="@+id/txtmaLop"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>

            <Button
                android:textStyle="bold"
                android:id="@+id/btnAddStudents"
                android:textColor="#FFF"
                android:background="@drawable/btn_add_class"
                android:text="Thêm sinh viên"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/background_add_title"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:textColor="#FFF"
                android:layout_weight="3.5"
                android:id="@+id/txt1"
                android:padding="5dp"
                android:fontFamily="@font/windsorb"
                android:gravity="center"
                android:textSize="18sp"
                android:text="Mã SV"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <TextView
                android:textColor="#FFF"
                android:id="@+id/txt2"
                android:padding="5dp"
                android:layout_weight="3.5"
                android:fontFamily="@font/windsorb"
                android:gravity="center"
                android:textSize="18sp"
                android:text="Họ Tên"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <TextView
                android:textColor="#FFF"
                android:id="@+id/txt3"
                android:padding="5dp"
                android:layout_weight="3.5"
                android:fontFamily="@font/windsorb"
                android:gravity="center"
                android:textSize="18sp"
                android:text="Ngành"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>